@model DevIo.App.Models.ProviderIndexModel

@{
    ViewBag.Title = "Provider List";
}

<div class="container">
    <div class="row">
        <div class="mt-3">
            <h2>@ViewBag.Title</h2>
            <a asp-action="Create" asp-controller="Provider" class="btn btn-sm btn-secondary">Create</a>
        </div>
    </div>
    <div class="row mt-2">
        <table class="table table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Name</th>
                    <th>Document</th>
                    <th>Is Active</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Providers)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Document)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsActive)
                        </td>
                        <td class="text-right">
                            <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info"><i class="fa fa-search"></i></a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-success"><i class="fa fa-edit"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


